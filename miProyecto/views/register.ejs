<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  

  <title>The Good Nook</title>
  <!-- Font Awesome Stylesheet -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
  <!-- Bootstrap Grid Stylesheet -->
  <link rel="stylesheet" href="/css/bootstrap-grid.min.css">
  <!-- Own Stylesheet -->
  <link rel="stylesheet" href="/css/app.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>

<body >
  <%- include('partials/header') %>
    <!-- Novedades -->
    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">Registrate</h2>
        </div>
        <!-- Show the "ultimos" products -->

      <main class="body_register">
          <section class="register-container">
            <form action="/users/newuser" method="POST" id="register-form" class="register-form">
                    <div class="form-group">
                      <label class="labell" for="email">Email</label>
                      <input class="inputt" type="email" id="email" name="email" placeholder="Ingresa tu correo" required>
                      <% if (error.email) { %><p class="error"><%= error.email %></p><% } %>
                    </div>
        
                    <div class="form-group">
                      <label class="labell" for="usuario">Usuario</label>
                      <input class="inputt" type="text" id="usuario" name="usuario" placeholder="Crea un usuario" required>
                      <% if (error.usuario) { %><p class="error"><%= error.usuario %></p><% } %>
                    </div>
        
                    <div class="form-group">
                      <label class="labell" for="password">Contraseña</label>
                      <input class="inputt" type="password" id="contrasena" name="contrasena" placeholder="Crea una contraseña" required>
                    </div>
        
                    <div class="form-group">
                      <label class="labell" for="birthdate">Fecha de nacimiento</label>
                      <input class="inputt" type="date" id="fecha_nacimiento" name="fecha_nacimiento" required>
                    </div>
        
                    <div class="form-group text-center">
                      <button class="boton" type="submit">Registrarse</button>
                    </div>
            </form>
          </section>
      </main>
    </div>
  </div>
        
  <%- include('partials/footer') %>
</body>

</html>