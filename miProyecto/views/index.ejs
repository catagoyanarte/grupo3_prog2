<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  

  <title>The Book Nook </title>
  <!-- Font Awesome Stylesheet -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
  <!-- Bootstrap Grid Stylesheet -->
  <link rel="stylesheet" href="/css/bootstrap-grid.min.css">
  <!-- Own Stylesheet -->
  <link rel="stylesheet" href="/css/app.css">

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>

<body>
  <!-- Header --> 
  <%- include('partials/header') %>
    <!-- Banner -->
    <div class="banner">
    </div>
    <!-- /Banner -->

    <!-- Novedades -->
    <div class="container products-wrapper">
      
      <div class="row">
        <% for(let i = 0; i < productos.length; i++) { %>
          <div class="col-12 col-sm-6 col-lg-3">
            <section class="product-box">
              <a href="/products/<%= productos[i].id %>">
                <figure class="product-box_image">
                  <img src="<%= productos[i].imagen %>" alt="<%= productos[i].nombre %>">
                </figure>
                <article class="product-box_data">
                  <h2><%= productos[i].nombre %></h2>
                  <p><%= productos[i].descripcion %></p>
                  <% for (let j = 0; j < productos[i].comentarios.length; j++) { %>
                    <div class="comentario">
                      <img src="<%= productos[i].comentarios[j].fotoPerfil %>" alt="" class="comentario-img" class="fotoRadio">
                      <strong><%= productos[i].comentarios[j].usuario %></strong>
                      <p><%= productos[i].comentarios[j].comentario %></p>
                    </div>
                  <% } %>
                </article>
              </a>
            </section>
          </div>
        <% } %>
    </div>
    </div>

    <%- include('partials/footer') %>

      <!-- /footer -->
</body>

</html>