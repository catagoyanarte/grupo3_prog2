<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title> The Good Nook</title>
    <!-- Font Awesome Stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <!-- Bootstrap Grid Stylesheet -->
    <link rel="stylesheet" href="/css/bootstrap-grid.min.css">
    <!-- Own Stylesheet -->
    <link rel="stylesheet" href="/css/app.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet">
</head>

<body>
    <%- include('partials/header') %>

        <!-- Novedades -->

        <div class="container products-wrapper">
            <div class="row">
                <div class="col-12">
                    <h2 class="products-title">Resultados de búsqueda</h2>
                </div>
                <% if (error.librosEncontrados) { %>
                    <p class="error">
                        <%= error.librosEncontrados %>
                    </p>
                    <% } %>

                        <% if (resultados.length==0) { %>

                            <p>No hay resultados para su criterio de búsqueda</p>

                            <% } %>


                                <div class="row">
                                    <% for(let i=0; i < resultados.length; i++) { %>
                                        <div class="col-12 col-sm-6 col-lg-3">
                                            <section class="product-box">
                                                <a href="/products/<%= resultados[i].id_producto %>">
                                                    <figure class="product-box_image">
                                                        <img src="<%= resultados[i].foto_producto %>"
                                                            alt="<%= resultados[i].nombre %>">
                                                    </figure>
                                                    <article class="product-box_data">
                                                        <h2>
                                                            <%= resultados[i].nombre %>
                                                        </h2>
                                                        <p>
                                                            <%= resultados[i].descripcion %>
                                                        </p>


                                                    </article>

                                                </a>
                                                <% if (resultados[i].usuario) { %>
                                                    <p>
                                                        Subido por:
                                                        <a
                                                            href="/users/profile/<%= resultados[i].usuario.id_usuario %>">
                                                            <%= resultados[i].usuario.usuario %>
                                                        </a>
                                                    </p>
                                                    <% } %>
                                            </section>
                                        </div>
                                        <% } %>
                                </div>



                                <%- include('partials/footer') %>
            </div>
        </div>
</body>

</html>